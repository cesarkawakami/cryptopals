{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LLDB CMake",
            "type": "lldb",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "env": {
                "PATH": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}",
                "ASAN_OPTIONS": "abort_on_error=1,detect_leaks=0"
            }
        }
    ]
}
